<!---Create quote popup--->
<div class="popup" id="cqpp">
    
    <div class="popupContent" id="cqppContent">

        <!------GENERAL BUTTONS------>        
        <div class="divDGBs" id="DGBsQuotations">
            <% if (userLogged.id_users_categories != 4) { %>
                <div class="divDGB divDGBm" id="cqppAddEvent">
                    AGREGAR EVENTO
                </div>
                <div class="divDGB divDGBm" id="cqppNewLine">
                    LÍNEA ADICIONAL
                </div>
                <% } else { %>
                    <div class="divDGB divDGBm" id="cqppUploadOrder">
                        CARGAR ORDEN DE COMPRA
                        <div id="cqppFileCheck">
                            <i class="fa-regular fa-circle-check"></i>
                        </div>
                        <div id="cqppFileName"></div>
                    </div>
                    
            <% } %> 
        </div>

        <div class="popupIcons">
            <div class="popupIcon3"><i class="fa-solid fa-file-invoice-dollar"></i></div>
            <div class="popupClose3" id="cqppClose"><i class="fa-solid fa-rectangle-xmark popupCloseIcon"></i></div>
        </div>

        <div class="popupTitle1 mtm" id="cqppMainTitle"></div>
        <div class="popupTitle1 mts" id="cqppSubtitle"></div>

        <div class="divTable borderBottom mtm" id="cqppTable">
            <table>
                <thead>
                    <tr>
                        <th class="thCss fsm thxxxxl">Descripción</th>
                        <th class="thCss fsm ths">Cantidad</th>
                        <th class="thCss fsm ths">Precio Unitario</th>
                        <th class="thCss fsm ths">Subtotal</th>
                        <th class="thCss fsm ths">Descuento %</th>
                        <th class="thCss fsm ths">Total</th>
                        <% if (userLogged.id_users_categories != 4) { %>
                            <th class="thCss fsm thxs">
                                <i class="fa-regular fa-pen-to-square"></i>
                            </th>
                            <th class="thCss fsm thxs">
                                <i class="fa-regular fa-trash-can"></i>
                            </th>
                        <% } %>
                    </tr>
                </thead>
                <tbody id="bodyQuotations"></tbody>
            </table>            
        </div>

        <div class="tableData" id="quotationsTableData">
            <div class="tableDataLine">
                <div class="lineTitle">Subtotal $:</div>
                <div class="lineData" id="cqppSubtotal"></div>
            </div>
            <div class="tableDataLine">
                <div class="lineTitle">Descuento %:</div>
                <div class="lineData" id="cqppDiscount"></div>
                <% if (userLogged.id_users_categories != 4) { %>
                    <div class="lineEdit" id="cqppEditDiscount"><i class="fa-solid fa-pencil"></i></div>
                <% } %>
                
            </div>
            <div class="tableDataLine">
                <div class="lineTitle">Total $:</div>
                <div class="lineData" id="cqppTotal"></div>
            </div>
        </div>

        <div class="divErrorFlex mtm" id="cqppError2">
            <i class="fa-solid fa-triangle-exclamation"></i>
            <div id="cqppError2Text"></div>
        </div>

        <div class="divButtonsRow mtxxl mbs">
            <% if (userLogged.id_users_categories != 4) { %>
                <div id="cqppSave" class="button1 bm">Guardar</div>
                <div id="cqppSend" class="button1 bm">Enviar</div>
                <% } else { %>
                    <div id="cqppAccept" class="button1 bm">Aprobar OC</div>
            <% } %>            
        </div>

    </div>
</div>

<div class="okPopup" id="cqppOk">    
    <div class="okContent" id="cqppOkContent">
        <div class="okDiv">
            <div class="okIcon1"><i class="fa-regular fa-circle-check"></i></div>
            <div class="okText" id="cqppOkText"></div>
        </div>
    </div>
</div>

<div class="errorPopup" id="cqppError">    
    <div class="errorContent" id="cqppErrorContent">
        <div class="errorDiv">
            <div class="errorIcon1"><i class="fa-solid fa-triangle-exclamation"></i></div>
            <div class="errorText" id="cqppErrorText">Debe seleccionar reservas de una misma compañía</div>
        </div>
    </div>
</div>

