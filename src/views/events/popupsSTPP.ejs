<!---students popup (stpp)--->
<div class="popup" id="stpp">
    
    <div class="popupContent" id="stppContent">

        <div class="popupIcons">
            <div class="popupIcon3"><i class="fa-regular fa-user"></i></div>
            <div class="popupClose3" id="stppClose"><i class="fa-solid fa-rectangle-xmark popupCloseIcon"></i></div>
        </div>

        <div class="popupTitle1 mtm" id="stppMainTitle"></div>
        <div class="popupTitle2 mts" id="stppSubtitle"></div>
        <div class="popupTitle1 mtl">ALUMNOS</div>
        
        <% if (userLogged.id_users_categories != 4) { %>
            <div class="divInputsRow mtm mbm">
                <div class="divInput">
                    <label class="label1" id="stppCompanyLabel">Institución</label>
                    <select class="input1 sxxl spm" id="stppCompany"></select>           
                </div>
            </div>
        <% } %>
        
        <div class="popupTitle2 mts" id="stppSubtitle2"></div>
        <div id="uploadExcel">                
            <i class="fa-regular fa-file-excel" id="stppUploadExcelIcon"></i>
            <div id="showActionExcel">
                Subir datos desde Excel
            </div>
        </div>

        <div class="divInputsRow mtm">
            <div class="divInput">
                <label class="label1 fwb" id="stppLastNameLabel">Apellido</label>
                <input type="text" class="input1 il ipm" id="stppLastName" autocomplete="off">                    
            </div>
            <div class="divInput">
                <label class="label1 fwb" id="stppFirstNameLabel">Nombre</label>
                <input type="text" class="input1 il ipm" id="stppFirstName" autocomplete="off">                    
            </div>
            <div class="divInput">
                <label class="label1 fwb" id="stppEmailLabel">Email</label>
                <input type="text" class="input1 il ipm" id="stppEmail" autocomplete="off">                    
            </div>
            <div class="divInput">
                <label class="label1 fwb" id="stppDNILabel">DNI</label>
                <input type="number" class="input1 im ipm" id="stppDNI" autocomplete="off">                    
            </div>
            <div id="stppAddStudent">
                <i class="fa-solid fa-plus"></i>
            </div>
        </div>

        <div class="divError" id="stppError"></div>

        <div class="divTable mtm" id="studentsTable">
            <table>
                <thead>
                    <tr>
                        <th class="thCss fsm thl">Apellido</th>
                        <th class="thCss fsm thl">Nombre</th>
                        <th class="thCss fsm thl">Email</th>
                        <th class="thCss fsm ths">DNI</th>
                        <% if (userLogged.id_users_categories != 4) { %>
                            <th class="thCss fsm thl">Institución</th>
                        <% } %>
                        <th class="thCss fsm thxs">
                            <i class="fa-regular fa-trash-can"></i>
                        </th>
                    </tr>
                </thead>
                <tbody id="bodyStudents"></tbody>
            </table>
        </div>

        <div class="divButtonsRow mtl mbs">
            <div id="stppAccept" class="button1 bm">Guardar</div>
            <div id="stppCancel" class="button1 bm">Cancelar</div>
        </div>

    </div>
</div>

<div class="okPopup" id="stppOk">    
    <div class="okContent" id="stppOkContent">
        <div class="okDiv">
            <div class="okIcon1"><i class="fa-regular fa-circle-check"></i></div>
            <div class="okText" id="stppOkText">Alumnos asignados con éxito</div>
        </div>
    </div>
</div>

<!----------LOADER---------->
<div class="loader" id="studentsLoader"></div>